@model EntityLayer.Concrete_Somut.Category
@{
    ViewBag.Title = "AddmyCategory";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni KAtegorileri Ekledim Sayfa</h1>
<br />
<!--Validator Sınıfındaki Mesajlarının UI'da Listelenmesi-->
@using (Html.BeginForm("AddmyCategory", "AdminCategory", FormMethod.Post))//nerede ne zaman işlem göreceğini belirleyecek //Action, Controller, FormMethod
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })<!--Validate ettiğimi sıradaki x değerine bakıyor-->
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /><br />
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x => x.CategoryStatue, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryStatue)


        <br /><br />
        <button>Kategoryi Kaydet</button>
    </div>
}