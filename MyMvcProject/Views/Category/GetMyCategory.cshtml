@using EntityLayer.Concrete_Somut
@model List<Category>
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<br/>

<table class="table table-bordered">

    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Durum</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryState</td>
                    <td>@item.CategoryStatue</td>
                </tr>
            }
</table>
<br/>
<a href="/Category/AddCategory" class="btn btn-dark">Yeni Kategori</a>